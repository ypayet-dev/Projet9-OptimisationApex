<apex:page controller="MyTeamOrdersController" showHeader="true" tabStyle="Order">
    <apex:sectionHeader title="Team Orders" subtitle="Vue équipe du commercial courant" />

    <!-- Bloc total équipe -->
    <apex:pageBlock title="Total équipe">
        <apex:outputText value="Total (toutes commandes visibles de l'équipe) : " />
        <apex:outputText value="{0,number,###,##0.00}">
            <apex:param value="{!teamTotal}" />
        </apex:outputText>
    </apex:pageBlock>

    <!-- Liste des commandes de l'équipe -->
    <apex:pageBlock title="Commandes de l'équipe">
        <apex:pageBlockTable value="{!teamOrders}" var="o">
            <apex:column headerValue="Nom">
                <apex:outputLink value="/{!o.Id}">{!o.Name}</apex:outputLink>
            </apex:column>
            <apex:column value="{!o.Status}" headerValue="Statut" />
            <apex:column value="{!o.TotalAmount}" headerValue="Montant total" />
        </apex:pageBlockTable>
    </apex:pageBlock>
</apex:page>